<div class = "container">
  <div>
    <h1><%= @restaurant.name %></h1>
    <h2><%= @restaurant.category %></h2>
    <h2><%= @restaurant.address %></h2>
    <h2><%= @restaurant.phone_number %></h2>
  </div>

<div class = reviews >
  <h2> Reviews : </h2>
  <ul>
    <%  @restaurant.reviews.each do |review|%>
      <li><%= review.content%></li>
    <% end %>
  </ul>
</div>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Back to restaurants", restaurants_path %>
</div>
